{
  "name": "tidb-dashboard-ui",
  "private": "true",
  "version": "1.0.0",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "prepare": "cd .. && husky install ui-new/.husky",
    "gen:api": "pnpm -r --parallel gen:api",
    "build:lib": "pnpm -r --filter @pingcap/tidb-dashboard-lib build",
    "dev": "pnpm build:lib && pnpm -r --parallel dev",
    "build": "pnpm -r build"
  },
  "devDependencies": {
    "eslint": "^8.9.0",
    "eslint-config-react-app": "^7.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.0"
  },
  "lint-staged": {
    "*.+(ts|tsx)": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.+(json|css|md)": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
